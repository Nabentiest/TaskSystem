<h1>タスク一覧</h1>

<%= form_with model: Task.new, url: tasks_path, local: true do |form| %>
  <div>
    <%= form.label :name, "新しいタスク名" %><br>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.submit "タスクを追加" %>
  </div>
<% end %>

<div style="border:1px solid red;">
  <%= render_task_tree(@tasks) %>
</div>

